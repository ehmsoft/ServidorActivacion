<div class = "row">
	<div class="span6 offset3">
		<%= form_for(@cuenta) do |f| %>
		<% if @cuenta.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@cuenta.errors.count, "error") %> prohibited this cuenta from being saved:</h2>

			<ul>
				<% @cuenta.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="field">
			<%= f.label :correo %>
			<br />
			<%= f.text_field :correo %>
		</div>
		<div class="field">
			<%= f.label :pendiente %>
			<br />
			<%= f.number_field :pendiente %>
		</div>
		<div class="field">
			<%= f.label :total %>
			<br />
			<%= f.number_field :total %>
		</div>
		<div class="field">
			<%= f.label :aplicacion_id %>
			<br />
			<%= collection_select(:cuenta,:aplicacion_id, Aplicacion.all, :id, :nombre) %>
		</div>
		<div class="actions">
			<%= f.submit "Aceptar", class: "btn btn-small btn-primary" %>
		</div>
		<% end %>
	</div>
</div>