<h1>Listado de Cuentas</h1>
<div class="row-fluid">
	<div class="span12">
<table class="table table-striped">
	<thead>
		<tr>
			<th>Correo</th>
			<th>Pendiente</th>
			<th>Total</th>
			<th>Aplicaci√≥n</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @cuentas.each do |cuenta| %>
		<tr>
			<td><%= cuenta.correo %></td>
			<td><%= cuenta.pendiente %></td>
			<td><%= cuenta.total %></td>
