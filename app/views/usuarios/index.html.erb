<h1>Listado de Usuarios</h1>

<div class="row-fluid">
	<div class="span12">
<table class="table table-striped">
	<thead>
  <tr>
    <th>Nombre</th>
    <th>Correo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
	<tbody>
<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nombre %></td>
    <td><%= usuario.correo %></td>
    <td><%= link_to 'Ver', usuario, class: "btn" %></td>
    <td><%= link_to 'Editar', edit_usuario_path(usuario), class: "btn" %></td>
    <td><%= link_to 'Eliminar', usuario, confirm: 'Segurito segurito?', method: :delete, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>
	</div>
</div>
<br />
<div class="row-fluid">
	<div class="span12">

<%= link_to 'Nuevo Usuario', new_usuario_path, class:"btn btn-small btn-primary" %>
	</div>
</div>